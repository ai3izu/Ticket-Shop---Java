<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #1b2838; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <ScrollPane fx:id="concertsScrollPane" fitToHeight="true" fitToWidth="true" style="-fx-background-color: #1b2838; -fx-padding: 20px;">
        <VBox fx:id="concertsVBox" alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #1b2838; padding: 20px;">
            <!-- Search Bar -->
            <HBox alignment="CENTER" spacing="20.0">
                <TextField fx:id="searchBar" prefWidth="400" promptText="Wyszukaj koncerty" style="-fx-background-color: #ffffff; -fx-border-radius: 15; -fx-text-fill: #2c3e50; -fx-padding: 10px 20px;">
                    <HBox.margin>
                        <Insets top="10.0" />
                    </HBox.margin>
                </TextField>
            </HBox>

            <!-- Concert Cards -->
            <VBox fx:id="concertsContainer" alignment="CENTER" spacing="20.0" style="-fx-background-color: transparent;">
                <!-- Concert Card 1 -->
                <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #34495e; -fx-border-radius: 15; -fx-padding: 10px 20px; width: 500px;">
                    <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: transparent;">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #ffffff;" text="Koncert Rockowy" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Dostępne bilety: 120" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Cena: 150 PLN" />
                        <Button style="-fx-background-color: #e74c3c; -fx-border-radius: 10; -fx-text-fill: #ffffff; -fx-padding: 10px 20px;" text="Kup Bilet" />
                    </VBox>
                </HBox>

                <!-- Concert Card 2 -->
                <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #34495e; -fx-border-radius: 15; -fx-padding: 10px 20px; width: 500px;">
                    <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: transparent;">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #ffffff;" text="Koncert Popowy" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Dostępne bilety: 80" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Cena: 120 PLN" />
                        <Button style="-fx-background-color: #e74c3c; -fx-border-radius: 10; -fx-text-fill: #ffffff; -fx-padding: 10px 20px;" text="Kup Bilet" />
                    </VBox>
                </HBox>

                <!-- Concert Card 3 -->
                <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #34495e; -fx-border-radius: 15; -fx-padding: 10px 20px; width: 500px;">
                    <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: transparent;">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #ffffff;" text="Koncert Elektroniki" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Dostępne bilety: 200" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Cena: 100 PLN" />
                        <Button style="-fx-background-color: #e74c3c; -fx-border-radius: 10; -fx-text-fill: #ffffff; -fx-padding: 10px 20px;" text="Kup Bilet" />
                    </VBox>
                </HBox>

                <!-- Concert Card 4 -->
                <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #34495e; -fx-border-radius: 15; -fx-padding: 10px 20px; width: 500px;">
                    <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: transparent;">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #ffffff;" text="Koncert Jazzowy" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Dostępne bilety: 50" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Cena: 180 PLN" />
                        <Button style="-fx-background-color: #e74c3c; -fx-border-radius: 10; -fx-text-fill: #ffffff; -fx-padding: 10px 20px;" text="Kup Bilet" />
                    </VBox>
                </HBox>

                <!-- Concert Card 5 -->
                <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #34495e; -fx-border-radius: 15; -fx-padding: 10px 20px; width: 500px;">
                    <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: transparent;">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #ffffff;" text="Koncert Klasyczny" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Dostępne bilety: 30" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Cena: 250 PLN" />
                        <Button style="-fx-background-color: #e74c3c; -fx-border-radius: 10; -fx-text-fill: #ffffff; -fx-padding: 10px 20px;" text="Kup Bilet" />
                    </VBox>
                </HBox>

                <!-- More concert cards can be added here -->
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>
