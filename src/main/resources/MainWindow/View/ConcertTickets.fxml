<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #1b2838; -fx-padding: 20px;"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.controller.gui.controller.TickerBuyController">
    <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #1b2838; -fx-padding: 20px;">
        <VBox fx:id="concertsVBox" alignment="TOP_CENTER" spacing="20.0"
              style="-fx-background-color: #1b2838; padding: 20px;">
            <HBox alignment="CENTER" spacing="20.0">
                <TextField fx:id="searchBar" prefWidth="400" promptText="Wyszukaj koncert..."
                           style="-fx-background-color: #ffffff; -fx-border-radius: 15; -fx-text-fill: #2c3e50; -fx-padding: 10px 20px;">
                    <HBox.margin>
                        <Insets top="10.0"/>
                    </HBox.margin>
                </TextField>
            </HBox>
            <VBox fx:id="concertsContainer" alignment="CENTER" spacing="20.0"
                  style="-fx-background-color: transparent;">
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>
